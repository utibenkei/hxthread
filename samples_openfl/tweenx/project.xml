<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="TweenX Example" package="org.libspark.thread.samples.tweenxexample" version="1.0.0" company="hxthread" />
	
	<!-- output -->
	<app main="Sample" file="Sample" path="bin" />
	
	<window background="#FFFFFF" fps="30" />
	<window width="500" height="500" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<source path="../../src" />
	<haxelib name="openfl" />
	<haxelib name="tweenx" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/img" rename="img" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>